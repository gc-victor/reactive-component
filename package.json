{
    "name": "@qery/reactive-component",
    "version": "0.4.2",
    "description": "A lightweight, powerful Web Component library for building reactive user interfaces with minimal boilerplate and maximum performance.",
    "keywords": [
        "reactive-component",
        "web-component",
        "reactive",
        "signal"
    ],
    "homepage": "https://github.com/gc-victor/reactive-component#readme",
    "bugs": {
        "url": "https://github.com/gc-victor/reactive-component/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gc-victor/reactive-component.git"
    },
    "license": "MIT",
    "author": "Query (https://qery.io)",
    "type": "module",
    "main": "dist/index.js",
    "source": "src/index.ts",
    "types": "src/index.d.ts",
    "exports": {
        ".": {
            "types": "./src/index.d.ts",
            "import": "./dist/index.js"
        },
        "./define": {
            "types": "./src/define.d.ts",
            "import": "./dist/define.js"
        }
    },
    "files": [
        "dist/index.js",
        "dist/define.js",
        "src/index.d.ts",
        "src/define.d.ts",
        "README.md",
        "CHANGELOG.md",
        "LICENSE",
        "package.json"
    ],
    "scripts": {
        "build": "npm run build:types && npm run bundle:esbuild",
        "build:types": "npx -p typescript tsc ./src/index.ts ./src/define.ts --module NodeNext --moduleResolution NodeNext --declaration --emitDeclarationOnly --strict --esModuleInterop --skipLibCheck --forceConsistentCasingInFileNames",
        "bundle:esbuild": "node esbuild.config.js",
        "examples": "cd examples && pnpm dev",
        "check": "biome check ./src ./tests",
        "check:fix": "biome check --write --unsafe ./src ./tests",
        "test": "vitest run tests/",
        "test:watch": "vitest --watch",
        "test:coverage": "vitest run tests/ --coverage",
        "test:coverage:watch": "vitest --coverage"
    },
    "dependencies": {
        "alien-signals": "^2.0.7"
    },
    "devDependencies": {
        "@biomejs/biome": "~2.2.3",
        "@vitest/browser": "^3.2.4",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "esbuild": "0.25.9",
        "happy-dom": "^18.0.1",
        "typescript": "~5.9.2",
        "update-browserslist-db": "^1.1.3",
        "vitest": "^3.2.4"
    }
}
