{
    "name": "@qery/reactive-component",
    "version": "0.5.0",
    "description": "A lightweight, powerful Web Component library for building reactive user interfaces with minimal boilerplate and maximum performance.",
    "keywords": [
        "reactive-component",
        "web-component",
        "reactive",
        "signal"
    ],
    "homepage": "https://github.com/gc-victor/reactive-component#readme",
    "bugs": {
        "url": "https://github.com/gc-victor/reactive-component/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gc-victor/reactive-component.git"
    },
    "license": "MIT",
    "author": "Query (https://qery.io)",
    "type": "module",
    "main": "dist/index.js",
    "source": "src/index.ts",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist/index.js",
        "dist/index.d.ts",
        "dist/rc.d.ts",
        "dist/define.d.ts",
        "README.md",
        "CHANGELOG.md",
        "LICENSE",
        "package.json"
    ],
    "scripts": {
        "build": "npm run build:types && npm run bundle:esbuild",
        "build:types": "npx -p typescript tsc ./src/index.ts ./src/rc.ts ./src/define.ts --module NodeNext --moduleResolution NodeNext --declaration --emitDeclarationOnly --strict --esModuleInterop --skipLibCheck --forceConsistentCasingInFileNames --outDir ./dist",
        "bundle:esbuild": "node esbuild.config.js",
        "example:dev": "pnpm --filter ./examples dev",
        "example:server": "pnpm --filter ./examples build && pnpm --filter ./examples start",
        "check": "biome check ./src ./tests ./e2e",
        "check:fix": "biome check --write --unsafe ./src ./tests ./e2e",
        "test": "vitest run tests/",
        "test:watch": "vitest --watch",
        "test:coverage": "vitest run tests/ --coverage",
        "test:coverage:watch": "vitest --coverage",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:debug": "playwright test --debug"
    },
    "dependencies": {
        "alien-signals": "^3.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "~2.2.5",
        "@playwright/test": "^1.56.0",
        "@vitest/browser": "^3.2.4",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "esbuild": "0.25.10",
        "happy-dom": "^19.0.2",
        "typescript": "~5.9.3",
        "update-browserslist-db": "^1.1.3",
        "vitest": "^3.2.4"
    }
}
