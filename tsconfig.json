{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@tests/*": ["../tests/*"]
    },
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "jsxFactory": "jsx",
    "jsxFragmentFactory": "Fragment",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": ["./types"]
  },
  "include": ["./src", "./types"]
}
