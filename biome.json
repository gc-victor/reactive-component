{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "assist": { "actions": { "source": { "organizeImports": "on" } } },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "useJsxKeyInIterable": "off"
            }
        }
    },
    "files": {
        "includes": ["**", "!**/templates"]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 140,
        "includes": ["**"]
    }
}
